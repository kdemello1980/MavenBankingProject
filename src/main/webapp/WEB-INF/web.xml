<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<display-name>MavenBankingProject</display-name>
	<!-- AccountServlet mappings. -->
	<servlet>
		<servlet-name>AccountServlet</servlet-name>
		<servlet-class>com.revature.mavenbanking.servlet.AccountServlet</servlet-class>
	</servlet>
	<!--<servlet-mapping> <servlet-name>AccountServlet</servlet-name> </servlet-mapping> 
		PassTimeServlet -->
	<servlet>
		<servlet-name>PassTimeServlet</servlet-name>
		<servlet-class>com.revature.mavenbanking.servlet.PassTimeServlet</servlet-class>
	</servlet>
	<!-- LoginServlet -->
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.revature.mavenbanking.servlet.LoginServlet</servlet-class>
	</servlet>
	<!-- UserServlet -->
	<servlet>
		<servlet-name>UserServlet</servlet-name>
		<servlet-class>com.revature.mavenbanking.servlet.UserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AccountServlet</servlet-name>
		<url-pattern>/accounts/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AccountServlet</servlet-name>
		<url-pattern>/accounts/status/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AccountServlet</servlet-name>
		<url-pattern>/accounts/owner/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AccountServlet</servlet-name>
		<url-pattern>/withdraw</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AccountServlet</servlet-name>
		<url-pattern>/deposit</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AccountServlet</servlet-name>
		<url-pattern>/transfer</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PassTimeServlet</servlet-name>
		<url-pattern>/passTime</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UserServlet</servlet-name>
		<url-pattern>/users/*</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
</web-app>
